<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Storage_Client.ItemDetailPage" Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="order" Clicked="Order_Clicked"/>

    </ContentPage.ToolbarItems>
    <StackLayout Spacing="20" Padding="15">
		<Label Text="{Binding Item.Text}" FontSize="Medium" />
		<Label Text="{Binding Item.Description}" FontSize="Small" />
	</StackLayout>
</ContentPage>
