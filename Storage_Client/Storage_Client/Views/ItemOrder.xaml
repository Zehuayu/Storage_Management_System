<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Storage_Client.ItemOrder" Title="New OredeInfo">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Post" Clicked="Post_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="order" FontSize="Medium" />
            <Entry Text="{Binding OrderInfo.OrderGoods}" FontSize="Small" />
            <Label Text="address" FontSize="Medium" />
            <Editor Text="{Binding OrderInfo.address}" FontSize="Small" Margin="0" />
            <Label Text="phone number" FontSize="Medium" />
            <Editor Text="{Binding OrderInfo.phonenumber}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

