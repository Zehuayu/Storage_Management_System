<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Storage_Client.NewItemPage" Title="New Item">


    <ContentPage.ToolbarItems>
		<ToolbarItem Text="Order" Clicked="Save_Clicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Spacing="10" Padding="15">
			<Label Text="Order" FontSize="Medium" />
			<Entry  x:Name="ordergoodsinput" Placeholder="ordergoods" FontSize="Small"  />
            <Label Text="Quantity" FontSize="Medium" />
            <Entry  x:Name="quantityinput" Placeholder="quantity" FontSize="Small"  />
			<Label Text="Your Address" FontSize="Medium" />
			<Entry  x:Name="addressinput" Placeholder="address" FontSize="Small" Margin="0" />
            <Label Text="Your PhoneNumber" FontSize="Medium" />
            <Entry  x:Name="phonenumberinput" Placeholder="phonenumber" Keyboard="Telephone" FontSize="Small" Margin="0" />
        
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
